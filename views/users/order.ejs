<div class="container mt-5">
    <%- include('../part/message') %>
    <div class="row mb-5">
        <div class="col-lg-12">
            <h1 class="title-head mb-3">Đơn hàng của bạn</h1>
            <div>
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Đơn hàng</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Giá trị đơn hàng</th>
                        <th scope="col">TT thanh toán</th>
                        <th scope="col">TT vận chuyển</th>
                      </tr>
                    </thead>
                    <tbody>
                        <%
                        orders.map(order=> {%>
                              <tr>
                                    <th><%= order._id %></th>
                                    <td><%= order.address %></td>
                                    <td><%= order.cart.priceTotal %></td>
                                    <td>Chưa thu tiền</td>
                                    <td>Chưa chuyển</td>
                              </tr>
                          <%})
                        %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</div>