<div class="container mt-5">
    <div class="card mb-4 shadow-sm">
			<div class="card-header">
				<h2>Cart</h2>
			</div>
			<div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
          </thead>
          <tbody>
              <%
              carts.map(cart=>{%>
                    <tr id="tr_cart_<%= cart.id %>">
                        <th><%= cart.item.name %></th>
                        <td><%= cart.item.price %>₫</td>
                        <td>
                          <div>
                            <a href="/cart/reduce/<%= cart.id %>" 
                               class="btn btn-sm btn-outline-primary btn-qty reduceCart"
                               id="<%= cart.id %>">-</a>
                            <span id="qty<%= cart.id %>">
                              <span id="qty2<%= cart.id %>">
                                <%= cart.qty %>
                              </span>
                            </span>
                            <a href="/cart/increase/<%= cart.id %>" 
                               class="btn btn-sm btn-outline-primary btn-qty increaseCart" 
                               id="<%= cart.id %>">+</a>
                          </div>
                        </td>
                        <td>
                            <img src="<%= cart.imageSrc %>" width="50px" style="border-radius: 50%">
                        </td>
                        <td>
                            <form action="/cart/<%= cart.id %>" method="POST" data-id="<%= cart.id %>" class="deleteCart">
                              <input type="submit" value="Delete" class="btn btn-danger">
                            </form>
                        </td>
                    </tr>
                <%})
              %>
          </tbody>
        </table>
      </div>
    </div>
    <h1 id="total1"><span id="total2">Total <%= priceTotal %>₫</span></h1>
</div>
