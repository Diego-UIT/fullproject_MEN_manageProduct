<div class="container mt-5">
    <div class="card mb-4 shadow-sm">
			<div class="card-header">
				<h2>Cart</h2>
			</div>
			<div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
          </thead>
          <tbody>
              <%
              carts.map(cart=>{%>
                    <tr>
                        <tr>
                            <th><%= cart.item.name %></th>
                            <td><%= cart.item.price %></td>
                            <td>
                              <div class="d-flex">
                                <form action="/cart/reduce/<%= cart.item._id %>?_method=PUT" method="POST">
                                  <button type="submit" class="btn btn-sm btn-outline-primary btn-qty">-</button>
                                </form>
                                <%= cart.qty %>
                                <form action="/cart/increase/<%= cart.item._id %>?_method=PUT" method="POST">
                                  <button type="submit" class="btn btn-sm btn-outline-primary btn-qty">+</button>
                                </form>
                              </div>
                            </td>
                            <td>
                                <img src="<%= cart.imageSrc %>" width="50px" style="border-radius: 50%">
                            </td>
                            <td>
                                <a class="btn btn-danger" data-id="<%= cart.item._id %>" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</a>
                            </td>
                        </tr>
                    </tr>
                <%})
              %>
          </tbody>
        </table>
      </div>
    </div>
    <p class="text-right total-price">Total: <strong id="total">60000</strong></p>
</div>

<!-- Modal confirm delete cart -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Xóa sản phẩm</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Bạn chắn chắn muốn xóa sản phẩm này?
        </div>
        <div class="modal-footer">
          <button id="delete-cart-modal" type="button" class="btn btn-danger">Save changes</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  
  <form name="deleteForm" method="POST"></form>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var cartId
      var btnDeleteCart = document.getElementById('delete-cart-modal')
      var deleteForm = document.forms["deleteForm"]
      var deleteModalEl = document.getElementById('deleteModal')
  
      deleteModalEl.addEventListener('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        cartId = button.data('id') 
      })
  
      btnDeleteCart.onclick = function() {
        deleteForm.action = '/cart/delete/' + cartId + '?_method=DELETE'
        deleteForm.submit()
      }
  
    })
  </script>